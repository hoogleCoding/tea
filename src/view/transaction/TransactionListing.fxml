<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.transaction.TransactionListing">
    <top>
        <VBox>
            <Button mnemonicParsing="false" onAction="#addTransaction" styleClass="add_button"
                    text="%TransactionListing.Create_transaction" VBox.vgrow="NEVER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <VBox.margin>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </top>
    <center>
        <ListView fx:id="transactionList" editable="true" onMouseClicked="#handleClick" VBox.vgrow="ALWAYS"/>
    </center>
</BorderPane>

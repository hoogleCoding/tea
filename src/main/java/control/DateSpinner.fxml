<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<fx:root type="javafx.scene.layout.HBox" xmlns:fx="http://javafx.com/fxml" stylesheets="/style/style.css">
    <Button text="&lt;" alignment="CENTER_LEFT" onAction="#moveBack">
        <HBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
        </HBox.margin>
    </Button>
    <Label text="March 2015" alignment="CENTER" fx:id="dateLabel" styleClass="dateSpinnerLabel"
           textAlignment="CENTER" minWidth="200" onMouseClicked="#dateLabelClicked">
        <HBox.margin>
            <Insets bottom="2.0" left="20.0" right="20.0" top="2.0"/>
        </HBox.margin>
    </Label>
    <Button text="&gt;" alignment="CENTER_RIGHT" onAction="#moveForward">
        <HBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
        </HBox.margin>
    </Button>
</fx:root>